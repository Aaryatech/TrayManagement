<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFrName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_fr"
            android:drawablePadding="10dp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:text="ksajhdsahd  kashdjk ashjkdhjk askjdhkj dsfjhdsjkhf sdkjhfkjdsh kfkdsh kfjhkdskf kdskfkjdshjkf hjkdshjfk"
            android:textColor="@color/bgBottomNavigation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBalSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/open_sans_semi_bold"
                android:gravity="center"
                android:padding="3dp"
                android:text="10" />

            <TextView
                android:id="@+id/tvBalBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/open_sans_semi_bold"
                android:gravity="center"
                android:padding="3dp"
                android:text="10" />

            <TextView
                android:id="@+id/tvBalLid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/open_sans_semi_bold"
                android:gravity="center"
                android:padding="3dp"
                android:text="10" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>